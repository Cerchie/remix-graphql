{
  "exclude": ["dist/**", "examples/**"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ESNext",
    "strict": true,
    "baseUrl": "src",
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true
  }
}
